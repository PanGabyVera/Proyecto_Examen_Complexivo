<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/frameLayout2"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".Fragments.detalle_compras"
>

    <TextView
            android:id="@+id/txtTotalComprasCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="@string/_120_36"
            android:textColor="#009688"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnComprar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.793"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/recyclecompras"
            app:layout_constraintVertical_bias="1.0"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclecompras"
            android:layout_width="410dp"
            android:layout_height="390dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/btnComprar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView27"
            tools:listitem="@layout/item_detalle_compras" app:layout_constraintVertical_bias="0.255"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:id="@+id/btnComprar"
            android:layout_width="132dp"
            android:layout_height="54dp"
            android:text="@string/comprar2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="56dp" android:layout_marginEnd="135dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="@string/total_de_sus_compras"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/btnComprar"
            app:layout_constraintEnd_toStartOf="@+id/txtTotalComprasCarrito"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintTop_toBottomOf="@+id/recyclecompras" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="32dp"
            android:text="@string/detalle_de_sus_compras"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="SUS COMPRAS"/>
</androidx.constraintlayout.widget.ConstraintLayout>