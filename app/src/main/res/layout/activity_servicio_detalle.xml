<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ServicioDetalle"
                                                   android:background="@drawable/fondo">

    <Button
            android:id="@+id/btnGuardarServicioCarrito"
            android:layout_width="219dp"
            android:layout_height="54dp"
            android:layout_marginTop="648dp"
            android:text="@string/qqqq"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:id="@+id/imgFotoServicio"
            android:layout_width="284dp"
            android:layout_height="253dp"
            android:layout_marginTop="36dp"
            android:contentDescription="@string/todosss"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck"
            tools:src="@tools:sample/avatars" app:layout_constraintHorizontal_bias="0.496"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="308dp"
            android:layout_height="316dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnGuardarServicioCarrito"
            android:id="@+id/linearLayout2"
            app:layout_constraintHorizontal_bias="0.494" android:layout_marginBottom="36dp"
            android:layout_marginTop="13dp" app:layout_constraintTop_toBottomOf="@+id/imgFotoServicio"
            app:layout_constraintVertical_bias="0.65">
        <TextView
                android:text="NOMBRE:"
                android:layout_width="300dp"
                android:layout_height="wrap_content" android:id="@+id/textView32" android:gravity="center_vertical"
                android:foregroundGravity="center_vertical" android:layout_marginStart="10dp"
                android:layout_marginTop="10dp" android:textSize="20sp" android:textColorHighlight="#D51919"
        />
        <TextView
                android:id="@+id/txtNombre_Servicio"
                android:layout_width="297dp"
                android:layout_height="41dp"
                android:text="@string/textview"
                android:layout_marginTop="10dp" android:textSize="20sp" android:gravity="center_vertical"
                android:layout_marginStart="10dp"/>
        <TextView
                android:text="PRECIO:"
                android:layout_width="294dp"
                android:layout_height="wrap_content" android:id="@+id/textView33" android:layout_marginTop="15dp"
                android:layout_marginStart="10dp" android:textSize="20sp"/>
        <TextView
                android:id="@+id/txtPrecio_Servicio3"
                android:layout_width="297dp"
                android:layout_height="41dp"
                android:text="@string/textviewasd"
                android:layout_marginTop="10dp" android:textSize="20sp" android:gravity="center_vertical"
                android:layout_marginStart="10dp"/>
        <TextView
                android:text="DESCRIPCION:"
                android:layout_width="296dp"
                android:layout_height="wrap_content" android:id="@+id/textView34" android:layout_marginTop="15dp"
                android:layout_marginStart="10dp" android:textSize="20sp"/>
        <TextView
                android:id="@+id/txtDescripcionServicio3"
                android:layout_width="295dp"
                android:layout_height="95dp"
                android:text="@string/textviewasdasd"
                android:layout_marginTop="10dp" android:gravity="start" android:layout_marginStart="10dp"
                android:textSize="18sp"/>
    </LinearLayout>
    <ImageView
            android:layout_width="69dp"
            android:layout_height="75dp" app:srcCompat="@drawable/compras" android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="72dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>